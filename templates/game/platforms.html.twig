{% extends 'base.html.twig' %}

{% block title 'Par console' %}

{% block body %}

<h1 class="nes-text is-success">Toutes les consoles disponibles</h1>

<section class="flex">
    
    {% include 'menu.html.twig'%}

    <div class="flex tab">
    {% for platform in platforms %}

    <div class="nes-container is-dark with-title is-centered" id="platform">
        <a href="{{ path('platform', {'id': platform.id}) }}" class="title">{{platform.name}}</a>
        <img src="img/platform/{{platform.img}}" class="logo" alt="Logo {{ platform.name }}">
        
    </div>

    {% endfor %}
    </div>

</section>

{% endblock %}