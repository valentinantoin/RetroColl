{% extends 'base.html.twig' %}

{% block title 'Tous les Jeux' %}

{% block body %}

    <h1 class="nes-text is-success">Liste de tous les jeux dispo</h1>

    <section class="flex">

        {% include 'menu.html.twig'%}

        <div class="nes-container is-rounded is-dark">
            <table>
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Plate-forme</th>
                </tr>
                </thead>
                <tbody>

                {% for game in games %}

                <tr>
                    <td><a href="">{{ game.name }}</a></td>
                    <td><a href="{{ path('platform', {'id': game.platform.id}) }}">{{ game.platform.name }}</a></td>
                </tr>

                {% endfor %}

                </tbody>
            </table>
        </div>

    </section>

{% endblock %}
