{% extends 'base.html.twig' %}

{% block title %}{{ game.name }}{% endblock %}

{% block body %}

    <h1 class="nes-text is-success">{{ game.name }}</h1>

    <section class="flex">

        {% include 'menu.html.twig'%}

        <div>
            <figure>
                <img src="../img/game/{{ game.img }}" alt="Logo {{ game.name }}" class="img"/>
            </figure>
            <p>Plate-forme : {{ game.platform.name }}</p>
            <p>{{ game.presentation }}</p>
        </div>

    </section>

{% endblock %}
